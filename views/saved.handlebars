
{{#each articles }}
    <div class="container panel panel-default" style="padding-top: 5px; padding-bottom: 5px">
        <div class="col-xs-8">{{this.title}}</div>
        <a class="col-xs-2 btn btn-default notes_article" style="background-color: blue; color: white" value="{{this._id}}" data-toggle="modal" data-target="#{{this._id}}">Notes</a>
        <button class="col-xs-2 btn btn-default delete_article" style="background-color: red; color: white" value="{{this._id}}">Delete Article</button>
        <a class="col-xs-10">{{this.link}}</a>
    </div>


<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="{{this._id}}" role="dialog">

        <!-- LOGIN MODAL -->
        <!-- DEFAULT IS DISPLAY: NONE UNTIL USER CLICKS ON LOG IN-->
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Notes for Article: {{this._id}}</h4>
                </div>
                <div class="modal-body">
                    <div class="note_container panel panel-default">
                        <!--<div class="panel panel-default">-->
                        {{#each this.notes}}
                            <div class="col-xs-10">{{this}}</div>
                            <button class="btn btn-default col-xs-2 delete_note" style="background-color: red;color: white" value="{{this}}">X</button>
                            {{/each}}
                        <!--</div>-->
                    </div>
                    <div>
                        <form>
                            <div class="form-group">
                                <label for="comment">Comment:</label>
                                <textarea class="form-control" rows="5" id="note_text_{{this._id}}" placeholder="Add a note"></textarea>
                            </div>
                            <button type="submit" class="btn btn-default submit_note" value="{{this._id}}">Submit</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
{{/each}}